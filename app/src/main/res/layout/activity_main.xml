            </LinearLayout>

            <!-- DEEPSEEK AI SERVER 2 -->
            <ImageView
                android:id="@+id/storage_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/Storage1"
                android:src="@drawable/deepseek_none"
                android:layout_marginTop="-19dp"
                android:layout_marginBottom="-10dp"/>

            <LinearLayout
                android:id="@+id/storage_1_monitor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="-20dp"
                android:visibility="gone">
            </LinearLayout>

            <!-- GPU SERVER -->
            <ImageView
                android:id="@+id/storage_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/Storage2"
                android:src="@drawable/aethir"
