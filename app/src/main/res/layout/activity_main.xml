            </LinearLayout>

            <!-- STORAGE 3 -->
            <ImageView
                android:id="@+id/storage_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/Storage5"
                android:src="@drawable/filecoin_none"
                android:layout_marginTop="-19dp"
                android:layout_marginBottom="-10dp"/>

            <LinearLayout
                android:id="@+id/storage_5_monitor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
            </LinearLayout>


            <ImageView
                android:id="@+id/storage_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/Storage5"
                android:src="@drawable/not_storage" />

            <!-- UPS CONTROLLER -->
            <ImageView
                android:id="@+id/ups_controller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="ups controller"
                android:src="@drawable/upscontroller"
                android:layout_marginTop="-9dp"/>

            <LinearLayout
                android:id="@+id/ups_controller_monitor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
            </LinearLayout>


            <!-- ZETACUBE 로고 -->
            <ImageView
                android:id="@+id/logo_zetacube"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/logo_zetacube"
                android:src="@drawable/logo_zetacube"
                android:layout_marginTop="1dp"/>

            <LinearLayout
                android:id="@+id/logo_zetacube_monitor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>