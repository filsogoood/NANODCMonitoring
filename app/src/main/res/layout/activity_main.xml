<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#09162A"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" >

        <!-- Add a loading animation or progress bar here -->
        <ProgressBar
            android:id="@+id/progress_bar_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:indeterminateTint="#FFC107" />
        <TextView
            android:id="@+id/text_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/progress_bar_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="모니터링 데이터를 불러오는 중..."
            android:textSize="16sp"
            android:textColor="#FFC107"/>
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="0dp"
            android:spacing="0dp">

        <!-- RACK STATUS 헤더 -->
            <ImageView
                android:id="@+id/rack_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/rack_info"
                android:src="@drawable/ndp_info"/>

            <LinearLayout
                android:id="@+id/rack_info_monitor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
            </LinearLayout>

            <!-- FILECOIN NODE INFO 헤더 -->
            <ImageView
                android:id="@+id/node_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/node_info"
                android:src="@drawable/node_info"/>

            <LinearLayout
                android:id="@+id/node_info_monitor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
            </LinearLayout>

            <!-- ONBOARDING STATUS 헤더 -->
            <ImageView
                android:id="@+id/onboarding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/onboarding"
                android:src="@drawable/onboarding"/>

            <LinearLayout
                android:id="@+id/onboarding_monitor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
            </LinearLayout>

            <!-- 100G SWITCH -->
            <ImageView
                android:id="@+id/switch_40"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/switch_40"
                android:src="@drawable/switch_100g"/>

            <LinearLayout
                android:id="@+id/switch_40_monitor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
            </LinearLayout>

            <!-- NODE/MINER -->
            <ImageView
                android:id="@+id/node_miner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/node_miner"
                android:src="@drawable/node_miner"/>

            <LinearLayout
                android:id="@+id/node_miner_monitor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
            </LinearLayout>

            <!-- POST WORKER -->
            <ImageView
                android:id="@+id/post_worker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/post_worker"
                android:src="@drawable/postworker"/>

            <LinearLayout
                android:id="@+id/post_worker_monitor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
            </LinearLayout>

            <!-- SUPRA WORKER 1 -->
            <ImageView
                android:id="@+id/pc2_1"
                android:layout_width="match_parent"
